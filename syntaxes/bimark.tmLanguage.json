{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "text.definition.bimark",
  "injectionSelector": "L:text.html.markdown -markup.inline.raw.string.markdown -meta.link.inline.markdown -markup.fenced_code.block.markdown",
  "name": "",
  "patterns": [
    {
      "include": "#bimark-definition"
    },
    {
      "include": "#bimark-explicit-escaped-reference"
    }
  ],
  "repository": {
    "bimark-definition": {
      "name": "entity.name.type.class.bimark",
      "match": "\\[\\[([^$&+,/:;=?!@\"'<>#%{}|\\\\^~\\[\\]`\\n\\r]+)((\\|[^$&+,/:;=?!@\"'<>#%{}|\\\\^~\\[\\]`\\n\\r]+)*)(:[^$&+,/:;=?!@ \"'<>#%{}|\\\\^~\\[\\]`\\n\\r]+)?\\]\\]"
    },
    "bimark-explicit-escaped-reference": {
      "name": "storage.type.bimark",
      "match": "\\[\\[((#[^$&+,/:;=?!@ \"'<>#%{}|\\\\^~\\[\\]`\\n\\r]+)|(@[^$&+,/:;=?!@\"'<>#%{}|\\\\^~\\[\\]`\\n\\r]+)|(!.*?))\\]\\]"
    }
  }
}
